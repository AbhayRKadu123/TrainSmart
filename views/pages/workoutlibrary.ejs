<%- layout('boilerplate.ejs') %>


<div class="row row-cols-1 row-cols-md-2 g-4">
<%for(let i=0;i<data.length;i++){%>
  <div class=" card mb-3 col mx-auto p-2" style="width: 18rem;">
    <img src="<%=data[i].image_url%>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%=data[i].exercise_name%></h5>
      <ul class="card-text list-group list-group-flush">
        <p class="card-text"><b>Target:</b> <%=data[i].targeted_muscle%></p>
        <p class="card-text"><b>Equipment :</b> <%=data[i].equipment%></p>
        <p class="card-text"><b>Sets :</b> <%=data[i].sets%></p>
        <p class="card-text"><b>Reps :</b> <%=data[i].reps%></p>
      <h5 class="card-title">Instructions</h5>
      
    
       <%for(let j=0;j<data[i].instructions.length;j++){%>
        <li class="list-group-item"><%=data[i].instructions[j]%></li>
      <% }%>
      </ul>
     

    </div>
  </div>

<%}%>
</div>